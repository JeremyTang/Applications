<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_radio_map_driver">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- 二级标题字体 -->

    <style name="style_text_second_title_black">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/font_body</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text_content">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/font_six</item>
    </style>

    <!-- 白色 16号字体 -->
    <style name="style_text_small_white">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <!-- 黑色 -->

    <style name="style_text_black_body">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/font_litter</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_text_black_small">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/font_litter</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_text_zoon_item">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- EditText 样式 不做编辑 无背景 -->

    <style name="style_edit_nothing">
        <item name="android:maxLines">8</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:focusable">false</item>
        <item name="android:textSize">@dimen/font_six</item>
    </style>

</resources>